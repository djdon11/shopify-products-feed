<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</div>


<div class="card">
  <div class="card-header">
    Product Feed Requirement (API Credentials)
  </div>
  <div class="card-block">
    <p class="card-text">You must need to enter Shopify App API Key & Password in order to fetch products feed.</p>
    <%= form_tag "feeds/feed_output.xml", method: :post, format: :xml  do %>
      <div class="form-group">
        <input name="api_key" class="form-control form-control-lg" id="apiKey" placeholder="Enter API Key">
      </div>
      <div class="form-group">
        <input name="api_password" type="password" class="form-control form-control-lg" id="apiPassword" placeholder="Enter API Password">
      </div>
      <div class="form-group">
        <input name="store_name" class="form-control form-control-lg" id="storeName" placeholder="Enter Store Name">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>

    <% end %>    
  </div>
</div>




