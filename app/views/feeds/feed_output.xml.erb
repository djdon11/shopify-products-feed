<?xml version="1.0" encoding="utf-8"?>
<items>
  <% @products.each do |product| %>
    <% collection = product.collections.try(:first) %>
    <% product.variants.each do |variant| %>
      <item>
        <sku><%= variant.sku%></sku>
        <first_category url_value="<%= default_url(collection) %>"><%= collection.try(:title) %></first_category>
        <description><![CDATA[<%= product.body_html.html_safe %>]]></description>
        <brand><%= product.vendor %></brand>
        <price><%= variant.price %></price>
        <product><%= product.title %></product>
        <url><%= default_url(product) %></url>
     </item>
    <% end %>
  <% end %>
</items>
  